rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for products stored at the root level
    match /products/{productId} {
      // Allow any authenticated user to read products
      allow read: if request.auth != null;

      // Allow create, update, and delete only if the user is the owner of the product
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.ownerUid;
    }

    // Rules for the users collection remain intact
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
